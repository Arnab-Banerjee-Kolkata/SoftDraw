<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.arnab.softdraw.DrawingSheet
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <include
            layout="@layout/pick_color_layout"/>

    <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#c6adad">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/bg1">
            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/brushBtn"
                    android:layout_width="@dimen/topBarIconWidth"
                    android:layout_height="match_parent"
                    android:src="@drawable/sketch_pen"
                    android:scaleType="fitCenter"
                    android:background="@drawable/circle"
                    app:riv_corner_radius="120dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/bg2">
            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/whiteBtn"
                    android:layout_width="@dimen/topBarIconWidth"
                    android:layout_height="match_parent"
                    app:riv_corner_radius="5dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/bg3">
            <ImageButton
                    android:id="@+id/textBtn"
                    android:layout_width="@dimen/topBarIconWidth"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/t"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/bgh4">
            <ImageButton
                    android:id="@+id/moustacheBtn"
                    android:layout_width="@dimen/topBarIconWidth"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:src="@drawable/moustache"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/bg5">
            <ImageButton
                    android:id="@+id/addImgBtn"
                    android:layout_width="@dimen/topBarIconWidth"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:src="@drawable/add_image"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/bg6">
            <ImageButton
                    android:id="@+id/threeDotBtn"
                    android:layout_width="@dimen/topBarIconWidth"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:src="@drawable/three_dots"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#c6adad"
            android:layout_alignParentBottom="true">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/tickCrossBtn"
                android:layout_width="@dimen/topBarIconWidth"
                android:layout_height="match_parent"
                android:src="@drawable/tick"
                android:scaleType="fitCenter"
                app:riv_corner_radius="120dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/fourArrowBtn"
                android:layout_width="@dimen/topBarIconWidth"
                android:layout_height="match_parent"
                app:riv_corner_radius="5dp"
                android:src="@drawable/four_arrow"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <ImageButton
                android:id="@+id/undoBtn"
                android:layout_width="@dimen/topBarIconWidth"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/undo"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <ImageButton
                android:id="@+id/redoBtn"
                android:layout_width="@dimen/topBarIconWidth"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:src="@drawable/redo"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <ImageButton
                android:id="@+id/pagesBtn"
                android:layout_width="@dimen/topBarIconWidth"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:src="@drawable/pages"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <ImageButton
                android:id="@+id/twoArrowBtn"
                android:layout_width="@dimen/topBarIconWidth"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:src="@drawable/two_arrows"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"/>

        <RelativeLayout
                android:id="@+id/toolSpace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"/>

    </LinearLayout>
    <include
            layout="@layout/brush_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_below="@+id/topBar"/>


</RelativeLayout>